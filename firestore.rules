rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow get, create: if isSignedIn() && request.auth.uid == userId;
      allow list: if isSignedIn();
      allow update: if isSignedIn() && (
        request.auth.uid == userId || 
        (
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pairedWith', 'updatedAt']) &&
           (
             request.resource.data.pairedWith == request.auth.uid ||
             (request.resource.data.pairedWith == "" && resource.data.pairedWith == request.auth.uid)
           )
        )
      );
    }

    match /pairs/{pairId} {
      allow create: if isSignedIn() && (
        request.resource.data.first == request.auth.uid || 
        request.resource.data.second == request.auth.uid
      );
      allow read, delete: if isSignedIn() && (
        resource.data.first == request.auth.uid || 
        resource.data.second == request.auth.uid
      );
    }
  }
}
